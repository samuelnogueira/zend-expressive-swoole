{
    "name": "samuelnogueira/zend-expressive-swoole",
    "description": "Swoole HTTP server integration with Zend Expressive framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Nogueira",
            "email": "samuel.nogueira@jumia.com"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "swoole/ide-helper",
                "version": "2.0.0",
                "dist": {
                    "url": "https://github.com/swoole/ide-helper/archive/master.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-swoole": "^2.0",
        "psr/container": "^1.0",
        "http-interop/http-middleware": "^0.4",
        "dflydev/fig-cookies": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.0",
        "zendframework/zend-expressive": "^2.1",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-expressive-fastroute": "^2.1",
        "swoole/ide-helper": "^2.0",
        "symfony/process": "^3.4 || ^4.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Samuelnogueira\\ExpressiveSwoole\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Samuelnogueira\\ExpressiveSwooleTest\\": "test/"
        }
    },
    "extra": {
        "zf": {
            "config-provider": "Samuelnogueira\\ExpressiveSwoole\\ConfigProvider"
        }
    },
    "bin": [
        "bin/swoole_serve"
    ],
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=coverage.clover",
        "test-serve": "(cd test/app && ./../../bin/swoole_serve ../../vendor/autoload.php)",
        "cs-check": "phpcs"
    }
}
